<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://userRegisterView.title">
    <layout justifyContent="CENTER" alignItems="CENTER"
            classNames="jmix-login-main-layout">

        <vbox id="registrationFormWrapper" width="22.5em" alignItems="CENTER"
              classNames="registration-form-layout">
            <h2 text="User registration"/>
            <formLayout>
                <checkbox id="vendorCheckBox" label="I want to register as a vendor"/>
                <textField id="usernameField" label="Username" required="true"/>
                <passwordField id="passwordField" label="Password" required="true"/>
                <textField id="firstNameField" label="First name"/>
                <textField id="lastNameField" label="Last name"/>
                <textField id="emailField" label="Email"/>
            </formLayout>
            <button id="registerBtn" text="Register" themeNames="primary" width="100%"/>
            <button id="alreadyRegisteredBtn" text="Already registered?" themeNames="primary" width="100%"/>
        </vbox>
    </layout>
</view>